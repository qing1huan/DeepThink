generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Thread {
  id        String    @id @default(cuid())
  title     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
}

model Message {
  id        String   @id @default(cuid())
  role      String
  content   String
  thoughts  String?
  createdAt DateTime @default(now())
  threadId  String
  thread    Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)
}
